<Window x:Class="TauMira.UserCtrls.WindowMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TauMira.UserCtrls"
        mc:Ignorable="d"
         WindowStyle="ToolWindow"  Height="176" Width="608" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label  HorizontalAlignment="Left" Grid.Row="0" Name="LabelMessage" Style="{DynamicResource LabelStyle1}" ></Label>
        <Grid Grid.Row="1" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  Margin="5,0">cont</Button>
            <Button Grid.Column="2" Margin="5,0">asdas</Button>
        </Grid>
    </Grid>
</Window>
