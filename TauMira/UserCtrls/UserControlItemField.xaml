<UserControl x:Class="TauMira.UserCtrls.UserControlItemField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TauMira.UserCtrls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Name="FieldName" Style="{DynamicResource LabelStyleFieldInput}" Content="Input Something"></Label>

            <Label Grid.Column="1" Name="ClearButton" Cursor="Hand" MouseUp="ClearButton_MouseUp" Style="{DynamicResource  LabelStyleClearFieldInput}" Content="Clear"></Label>
        </Grid>
        <Grid Grid.Row="1" Name="GBody"/>
    </Grid>
        
 
</UserControl>
